<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BS3206.Views.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="30" Spacing="10">
        <Entry x:Name="FullNameEntry" Placeholder="Full Name" Unfocused="OnUsernameUnfocused" />
        <Label x:Name="FullNameStatus" TextColor="Red" FontSize="12" />

        <Entry x:Name="EmailEntry" Placeholder="Email" TextChanged="OnEmailChanged" Unfocused="OnEmailUnfocused" />
        <Label x:Name="EmailStatus" TextColor="Red" FontSize="12" />


        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextChanged="OnPasswordChanged" />
        <Label x:Name="PasswordStatus" TextColor="Red" FontSize="12" />

        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" TextChanged="OnConfirmPasswordChanged" />
        <Label x:Name="ConfirmStatus" TextColor="Red" FontSize="12" />

        <Button x:Name="RegisterButton" Text="Register" Clicked="OnRegisterClicked" IsEnabled="False" />
        <Label x:Name="StatusLabel" TextColor="Red" FontAttributes="Bold" />
        <Button Text="Back to Login" Clicked="OnBackToLoginClicked" />

    </VerticalStackLayout>
</ContentPage>
