<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BS3206.Views.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="30" Spacing="10">
        <Entry x:Name="FullNameEntry" Placeholder="Full Name" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Back to Login" Clicked="OnBackToLogin" />
        <Label x:Name="StatusLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
